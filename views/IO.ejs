<%- include("partials/headernav.ejs") %>
<body>
    
    <div class="main order">
        <h3>Book an Appointment</h3>
        <div class="bookform">
            <div class="row">
                <h4 class="col-1 reglabel">Name</h4>
                <div class="col-2"></div>
                <input class="col-4 reglabel tbs" type="text" placeholder="Firstname">
                <div class="col-1"></div>
                <input class="col-4 reglabel tbd" type="text" placeholder="Lastname">
            </div>
            <div class="row">
                <h4 class="col-1 reglabel">Date</h4>
                <div class="col-2"></div>
                <input class="col-9 reglabel tbl" type="date" placeholder="date">
            </div>
            <div class="row">
                <h4 class="col-1 reglabel">Company</h4>
                <div class="col-2"></div>
                <input class="col-9 reglabel tbl" type="text" placeholder="Company Name">
            </div>
            <div class="row">
                <h4 class="col-1 reglabel">Email</h4>
                <div class="col-2"></div>
                <input class="col-9 reglabel tbl" type="text" placeholder="Email">
            </div>
            <div class="row">
                <h4 class="col-1 reglabel">Phone</h4>
                <div class="col-2"></div>
                <input class="col-9 reglabel tbl" type="text" placeholder="Phone">
            </div>
        </div>
        <button>Book Now</button>
    </div>
    
    
</body>
<%- include("partials/footer.ejs") %>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js" integrity="sha384-7+zCNj/IqJ95wo16oMtfsKbZ9ccEh31eOz1HGyDuCQ6wgnyJNSYdrPa03rtR1zdB" crossorigin="anonymous"></script>
