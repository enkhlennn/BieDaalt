        <link rel="stylesheet" href="css/Desktop.css">
    </head>
    <%- include("partials/headernav.ejs") %>
    <body>
        <div class="main container">
            <div id="mySlide" class="carousel slide" data-bs-interval="1500" data-bs-ride="carousel">
                <div class="carousel-indicators">
                <button type="button" data-bs-target="#mySlide" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                <button type="button" data-bs-target="#mySlide" data-bs-slide-to="1" aria-label="Slide 2"></button>
                <button type="button" data-bs-target="#mySlide" data-bs-slide-to="2" aria-label="Slide 3"></button>
                </div>
                <div class="carousel-inner">
                <div class="carousel-item active"><img class="citem" src="src/Main/backpack-white-logo.jpg" alt=""></div>
                <div class="carousel-item"><img class="citem" src="src/Main/backpack-white-front.jpg" alt=""></div>
                <div class="carousel-item"><img class="citem" src="src/Main/backpack-white-back.jpg" alt=""></div>
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#mySlide" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#mySlide" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
                </button>
            </div>
            <h3 class="category">OUR BEST SELLER PRODUCTS</h3>
            <div class="col-lg-12 categories">
                <div class="row">
                    <a href="/baguettebag" class="col-lg-3 col-4 bspc">
                        <img class="bsp" src="src/Products/BAGUETTE BAG/BUMBLEBEE YELLOW/1.jpg">
                        <div class="productInfo">
                            <h4 class="productName">BAGUETTE BAG</h4>
                            <h5 class="productPrice">150,000₮</h5>
                        </div>
                    </a>
                    <a href="/backpack" class="col-lg-3 col-4 bspc">
                        <img class="bsp" src="src/Products/BACKPACK/GARNET/1.jpg">
                        <div class="productInfo">
                            <h4 class="productName">BACKPACK</h4>
                            <h5 class="productPrice">230,000₮</h5>
                        </div>
                    </a>
                    <a href="/shoulderbag" class="col-lg-3 col-4 bspc">
                        <img class="bsp" src="src/Products/SHOULDER BAG 2/GARNET/1.jpg">
                        <div class="productInfo">
                            <h4 class="productName">SHOULDER BAG</h4>
                            <h5 class="productPrice">220,000₮</h5>
                        </div>
                    </a>
                    <a href="/bodybag" class="col-lg-3 col-4 bspc">
                        <img class="bsp" src="src/Products/BODY BAG/PORPOISE GRAY/1.jpg">
                        <div class="productInfo">
                            <h4 class="productName">BODY BAG</h4>
                            <h5 class="productPrice">170,000₮</h5>  
                        </div>
                    </a>
                </div>
            </div>
        </div>
    </body>
    <%- include("partials/footer.ejs") %>

